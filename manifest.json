{
  "manifest_version": 2,
  "name": "Explainooor",
  "version": "1.0",
  "description": "Explainooor uses chatgpt to explain the content you have highlighted.",
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}